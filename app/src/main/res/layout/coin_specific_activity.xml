<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_main">

    <ProgressBar
        android:id="@+id/progressBar_carga"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_specific"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/cardBackground"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Bitcoin"
                android:textSize="35sp"
                android:gravity="center"
                android:id="@+id/tv_specific_name"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/symbol_text"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_specificCoin_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SIMBOLO_OBT"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/opensource_text"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_specificCoin_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TYPE_OBT"
                    android:gravity="center"
                    android:layout_weight="1"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ranking"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/tv_specificCoin_rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RANK_OBT"
                    android:gravity="center"
                    android:layout_weight="1"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/tv_description_coin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>